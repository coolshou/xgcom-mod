#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@  --with autotools-dev

override_dh_auto_configure:
	./autogen.sh
	dh_auto_configure --
	
override_dh_install:
	mkdir -p debian/xgcom/usr/share/pixmaps/
	cp -R debian/xgcom.xpm debian/xgcom/usr/share/pixmaps/xgcom.xpm
	mkdir -p debian/xgcom/usr/share/applications/
	cp -R debian/xgcom.desktop debian/xgcom/usr/share/applications/xgcom.desktop
	dh_install

override_dh_installmenu:
	dh_installmenu
